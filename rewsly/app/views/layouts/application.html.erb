<!DOCTYPE html>
<html>
<head>
  <title>Rewsly</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	<div class="navbar">
  <div class="navbar-inner">
    <a class="brand" href="<%= root_path %>">Rewsly</a>
    <ul class="nav">
      <li><a href="<%= new_story_path %>">+ Add a story</a></li>
    </ul>
    <a class="btn btn-primary pull-right" href="<%= new_user_registration_path %>">Sign up</a>
    <a class="btn pull-right" href="<%= new_user_session_path %>">Log in</a>
  </div>
</div>
<%= bootstrap_flash %>
<%= yield %>

</body>
</html>
