<%= form_for @story do |f| %>
	<%= f.label :title, "Title" %>
	<%= f.text_field :title %>
	<%= f.label :category, "Category" %>
	<%= f.text_field :category %>
	<%= f.label :link, "Link" %>
	<%= f.text_field :link %>
	<%= f.label :upvotes, "Give some Upvotes" %>
	<%= f.number_field :upvotes %>
	<%= f.submit "Save story", {:class => "btn"} %>
<% end %>