<ul>
	<% @projects.each do |project| %>
	<li class="<%= project.category %>" data-featured="<%= project.featured %>">
		<div class="cat-tab"><%= project.category %></div>
		<img src="<%= image_path(Image.find(project.main_image).uri) %>">
		<h4><a href="<%= project_path(project) %>"><%= project.title %></a></h4>
		<p><%= project.description %></p>
		<p class="tags"><%= project.tags %></p>
		<% if user_signed_in? %>
			<a class="btn" href="<%= edit_project_path(@project) %>"><i class="eye-icon-open"></i> Edit Project</a>
			<%= button_to "Delete Project", project_path(@project), :method => :delete, :class => "btn btn-danger" %>
		<% end %>
	</li>
	<% end %>
</ul>