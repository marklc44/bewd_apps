<!DOCTYPE html>
<html>
<head>
  <title>Portfolio</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= params[:action] %>">
	<div class="navbar">
	  <div class="navbar-inner">
	    <a class="brand" href="<%= root_path %>">Mark Centoni</a>
	    <ul class="nav">
	      <li><a href="<%= main_about_path %>">About</a></li>
	      <li><a href="<%= projects_path %>">Projects</a></li>
	      <li><a href="#">Blog</a></li>
	      <li><a href="<%= main_contact_path %>">Contact</a></li>
	    </ul>
	     <% if user_signed_in? %>
	    <p class="pull-right" style="margin-top:.5em">Hi, <%= current_user.email%> | <%= link_to "Log Out", destroy_user_session_path, :method => :delete %></p>
	    <% else %>
	    <a class="btn btn-primary pull-right" href="<%= new_user_registration_path %>">Sign Up</a>
	    <a class="btn pull-right" href="<%= new_user_session_path %>">Login</a>
	    <% end %>
	  </div>
	</div>

	<div class="content-wrapper">
		<%= yield %>
	</div><!--end content-wrapper-->
	
	<footer></footer>
</body>
</html>
