<%= render "main/hero" %>
<div class="container-fluid">
	<div class="row-fluid">
		<div class="span3 offset4 <%= @project.category %>" data-featured="<%= @project.featured %>">
			<div class="cat-tab"><%= @project.category %></div>
			<img src="<%= image_path(@main_image.uri) %>">
			<h4><%= @project.title %></h4>
			<p><%= @project.description %></p>
			<p class="tags"><strong>Tags:</strong> <%= @project.tags %></p>
			<div id="project-tn" class="container-fluid">
				<% if @project.tn_images %>
					<img class="span3" src="<%= image_path(@tn_image.uri) %>">
				<% end %>
			</div><!-- end project thumbnails-->
			<% if user_signed_in? %>
				<a class="btn" href="<%= edit_project_path(@project) %>"><i class="eye-icon-open"></i> Edit Project</a>
				<%= button_to "Delete Project", project_path(@project), :method => :delete, :class => "btn btn-danger" %>
			<% end %>
			<a class="btn" href="<%= projects_path %>"><i class="icon-chevron-left"></i> Back to all projects</a>
		</div>
	</div>	
</div><!--end container-->